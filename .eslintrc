{
  "env": {
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "arrow-parens": ["error", "always"],
    "no-shadow": 0,
    "radix": 0,
    "keyword-spacing": 0,
    "consistent-return": 0,
    "arrow-body-style": 0,
    "no-use-before-define": 0,
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi": ["error", "always"],
    "one-var": [
      "error",
      {
        "uninitialized": "always"
      }
    ]
  }
}
